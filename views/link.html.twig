{% extends "layout.html.twig" %}

{% block title %}New link{% endblock %}

{% block content %}
<div class="form_container" >
    <h2>New link</h2>
    {% if linkForm %}
        {{ form_start(linkForm) }}
			<div class="form-group">
				<div class="col-sm-12">
				{{ form_label(linkForm.title, null, { 'label_attr':  {
				'class': 'col-sm-1 control-label'
				}}) }}
				
				{{ form_errors(linkForm.title) }}
				{{ form_widget(linkForm.title, { 'attr':  {
                'class': 'form-control'
				}}) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
				{{ form_label(linkForm.url, null, { 'label_attr':  {
				'class': 'col-sm-1 control-label'
				}}) }}
				
				{{ form_errors(linkForm.url) }}
				{{ form_widget(linkForm.url, { 'attr':  {
                'class': 'form-control'
				}}) }}
				</div>
			</div>
            <div class="form-group">
				<div class="col-sm-1">
                <input type="submit" class="btn btn-primary" value="Save" />
				</div>
            </div>
        {{ form_end(linkForm) }}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% else %}
        <a href="{{ path('login') }} ">Log in</a>
    {% endif %}
</div>
{% endblock %}